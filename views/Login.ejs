<div class="w3-container w3-half w3-margin-top" style="margin-left:25%">

<form action="/login" method="post" class="w3-container w3-card-4" style="border-radius: 10px">
  <p>
  <label class="w3-label w3-validate">Name</label>
  <input name="username" class="w3-input" type="text" style="width:90%" required>
  </p>
  
  <p>
  <label class="w3-label w3-validate">Password</label>
  <input name="password"class="w3-input" type="password" style="width:90%" >
  </p>
  
  <input type='submit' class="w3-btn w3-section w3-teal w3-ripple" value='Log in' /><br/>
</form>
  <button class="w3-btn w3-section w3-teal w3-ripple" style="float: left;"> <a href='/showCreateAccountPage'>Create Account </a></button>
</div>

